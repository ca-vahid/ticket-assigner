# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ticket_assigner
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Application Configuration
NODE_ENV=development
BACKEND_PORT=3001
FRONTEND_PORT=3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRATION=7d

# Azure AD Configuration
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret

# Freshservice Configuration
FRESHSERVICE_API_KEY=your-freshservice-api-key
FRESHSERVICE_DOMAIN=your-domain.freshservice.com
FRESHSERVICE_WEBHOOK_SECRET=your-webhook-secret

# VacationTracker Configuration
VACATION_TRACKER_API_KEY=your-vacation-tracker-api-key
VACATION_TRACKER_ORG_ID=your-org-id

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_AZURE_AD_CLIENT_ID=your-azure-ad-client-id
NEXT_PUBLIC_AZURE_AD_TENANT_ID=your-azure-ad-tenant-id

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
ENABLE_AUTO_ASSIGNMENT=false
ENABLE_FEEDBACK_LEARNING=true
ENABLE_SLACK_NOTIFICATIONS=false

# Performance Settings
MAX_CONCURRENT_ASSIGNMENTS=10
CACHE_TTL=3600
SYNC_INTERVAL_HOURS=1