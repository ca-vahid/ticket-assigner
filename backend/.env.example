# Backend Environment Variables

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ticket_assigner
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Server
PORT=3001
NODE_ENV=development

# Authentication
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=7d

# Azure AD
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# Freshservice
FRESHSERVICE_API_KEY=your-api-key
FRESHSERVICE_DOMAIN=your-domain.freshservice.com
FRESHSERVICE_WEBHOOK_SECRET=your-webhook-secret

# VacationTracker
VACATION_TRACKER_API_KEY=your-api-key
VACATION_TRACKER_ORG_ID=your-org-id

# Logging
LOG_LEVEL=debug